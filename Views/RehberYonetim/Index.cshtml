@model List<Kisiler>
@{
    ViewData["Title"] = "Kişiler Listesi";
}


<h1>Kisiler Listesi</h1>

<table class ="table table-striped">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Soyad</th>
            <th>TelefonNo</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
       @foreach(var item in Model)
       {
           <tr>
             <td>@item.Ad</td>
             <td>@item.Soyad</td>
             <td>@item.TelefonNo</td>
             <td>
                 <a href="#" class="btn btn-info"><i class="bi bi-info-circle"></i>Detaylar</a> 
                 <a href="#" class="btn btn-warning"><i class="bi bi-pencil-square"></i>Düzenle </a>
                 <a href="#" class="btn btn-danger"><i class="bi bi-trash3"></i>Sil</a>
             </td>
           </tr>
       }
    </tbody>
</table>
