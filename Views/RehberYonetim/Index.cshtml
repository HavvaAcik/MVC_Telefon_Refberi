@model List<Kisiler>
@{
    ViewData["Title"] = "Kişiler Listesi";
}


<h1>Kisiler Listesi</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>KisiNo</th>
            <th>Ad</th>
            <th>Soyad</th>
            <th>TelefonNo</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.KisiNo</td>
                <td>@item.Ad</td>
                <td>@item.Soyad</td>
                <td>@item.TelefonNo</td>
                <td>
                    <a asp-controller="RehberYonetimi" asp-action="Detaylar" asp-route-id="@item.KisiNo"
                        class="btn btn-info"><i class="bi bi-info-circle"></i>Detaylar</a>
                    <a asp-controller="RehberYonetimi" asp-action="Duzenle" asp-route-id="=@item.KisiNo"
                        class="btn btn-warning"><i class="bi bi-pencil-square"></i>Düzenle </a>
                    <a href="#" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal"><i
                            class="bi bi-trash3"></i>Sil</a>
                    <!-- Modal -->
                    <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false"
                        tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="staticBackdropLabel">Modal title</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                        aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    ...
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                    <button type="button" class="btn btn-primary">Understood</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
